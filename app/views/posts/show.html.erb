<div class="page-header">
  <h3>Post #<%= @post.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @post.user_id %></dd>

      <dt>Body</dt>
      <dd><%= @post.body %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/posts" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @post.user %>
        <a href="/posts/<%= @post.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_post/<%= @post.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>

<!-- A Post has many vosts -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Vosts
      </li>

      <% @post.vosts.each do |vost| %>
        <li class="list-group-item">
          <a href="/vosts/<%= vost.id %>">
            <%= vost.yes_no %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/vosts/<%= vost.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/vosts/<%= vost.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_vost/<%= vost.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Post has many whies -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Whies
      </li>

      <% @post.whies.each do |why| %>
        <li class="list-group-item">
          <a href="/whies/<%= why.id %>">
            <%= why.body %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/whies/<%= why.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/whies/<%= why.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_why/<%= why.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
