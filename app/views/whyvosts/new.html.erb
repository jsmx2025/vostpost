<!-- Validation failure messages -->
<% if @whyvost.errors.any? %>
  <% @whyvost.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Whyvost</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_whyvost" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for response -->
      <div class="form-group">
        <label for="response" class="control-label">
          Response
        </label>

        <input type="text" id="response" name="response" placeholder="Response" class="form-control" value="<%= @whyvost.response %>">
      </div>

      <!-- Label and input for why_id -->
      <div class="form-group">
        <label for="why_id" class="control-label">
          Why
        </label>

        <%= select_tag(:why_id, options_from_collection_for_select(Why.all, :id, :body, @whyvost.why_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Whyvost
      </button>
      or
      <a href="/whyvosts">Cancel</a>
    </form>
  </div>
</div>
