<div class="page-header">
  <h1>
    Whyvosts
    <a href="/whyvosts/new" class="btn btn-lg btn-success">New Whyvost</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "whyvosts_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :response_cont, "Response contains" %>
    <%= f.text_field :response_cont, :class => "form-control", :placeholder => "Response contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :post_body_cont, "Post body contains" %>
      <%= f.text_field :post_body_cont, :class => "form-control", :placeholder => "Post body contains" %>
    </div>

<div class="form-group">
          <%= f.label :created_at, "Why Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='whygteqcreated_atPicker'>
                  <%= f.text_field :why_created_at_gteq, :class => "form-control", :placeholder => "Why Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='whylteqcreated_atPicker'>
                  <%= f.text_field :why_created_at_lteq, :class => "form-control", :placeholder => "Why Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#whygteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#whylteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#whygteqcreated_atPicker').on("dp.change", function (e) {
                  $('#whylteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#whylteqcreated_atPicker').on("dp.change", function (e) {
                  $('#whygteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
      <%= f.label :vost_response_cont, "Vost response contains" %>
      <%= f.text_field :vost_response_cont, :class => "form-control", :placeholder => "Vost response contains" %>
    </div>

<div class="form-group">
      <%= f.label :user_email_cont, "User email contains" %>
      <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/whyvosts" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#whyvosts_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Vost</th>
        <th>Post</th>
        <th>Why</th>
        <th>Response</th>
        <th>Actions</th>
      </tr>

      <% @whyvosts.each do |whyvost| %>
      <tr>
        <td>
          <% if whyvost.vost.present? %>
            <a href="/vosts/<%= whyvost.vost.id %>">
              <%= whyvost.vost.response %>
            </a>
          <% end %>
        </td>
        <td>
          <% if whyvost.post.present? %>
            <a href="/posts/<%= whyvost.post.id %>">
              <%= whyvost.post.body %>
            </a>
          <% end %>
        </td>
        <td>
          <% if whyvost.why.present? %>
            <a href="/whies/<%= whyvost.why.id %>">
              <%= whyvost.why.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= whyvost.response %></td>
        <td>
          <a href="/whyvosts/<%= whyvost.id %>" class="btn btn-primary">Show</a>
          <a href="/whyvosts/<%= whyvost.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_whyvost/<%= whyvost.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @whyvosts, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
