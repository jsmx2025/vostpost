<div class="page-header">
  <h3>Whyvost #<%= @whyvost.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Vost</dt>
      <dd>
        <% if @whyvost.vost.present? %>
          <a href="/vosts/<%= @whyvost.vost_id %>">
            <%= @whyvost.vost.response %>
          </a>
        <% end %>
      </dd>

      <dt>Post</dt>
      <dd>
        <% if @whyvost.post.present? %>
          <a href="/posts/<%= @whyvost.post_id %>">
            <%= @whyvost.post.body %>
          </a>
        <% end %>
      </dd>

      <dt>Why</dt>
      <dd>
        <% if @whyvost.why.present? %>
          <a href="/whies/<%= @whyvost.why_id %>">
            <%= @whyvost.why.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Response</dt>
      <dd><%= @whyvost.response %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/whyvosts" class="btn btn-primary">
        Back
      </a>
      <a href="/whyvosts/<%= @whyvost.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_whyvost/<%= @whyvost.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Whyvost has many user -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        User
      </li>

      <% @whyvost.user.each do |user| %>
        <li class="list-group-item">
          <a href="/users/<%= user.id %>">
            <%= user.email %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/users/<%= user.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/users/<%= user.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_user/<%= user.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
