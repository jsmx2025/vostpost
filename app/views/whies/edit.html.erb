<!-- Validation failure messages -->
<% if @why.errors.any? %>
  <% @why.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Why #<%= @why.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_why/<%= @why.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      
      

      <!-- Label and input for post_id -->
      <div class="form-group">
        <label for="post_id" class="control-label">
          Post
        </label>

        <%= select_tag(:post_id, options_from_collection_for_select(Post.all, :id, :body, @why.post_id), :class => "form-control") %>
      </div>

      <!-- Label and input for vost_id -->
      <div class="form-group">
        <label for="vost_id" class="control-label">
          Vost
        </label>

        <%= select_tag(:vost_id, options_from_collection_for_select(Vost.all, :id, :response, @why.vost_id), :class => "form-control") %>
      </div>

      <!-- Label and input for response -->
      <div class="form-group">
        <label for="response" class="control-label">
          Response
        </label>

        <input type="text" id="response" name="response" placeholder="Response" class="form-control" value="<%= @why.response %>">
      </div>

      <button class="btn btn-warning">
        Update Why
      </button>
      or
      <a href="/whies/<%= @why.id %>">Cancel</a>
    </form>
  </div>
</div>
