<!-- Validation failure messages -->
<% if @why.errors.any? %>
  <% @why.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Why</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_why" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for answer_id -->
      <div class="form-group">
        <label for="answer_id" class="control-label">
          Answer
        </label>

        <%= select_tag(:answer_id, options_from_collection_for_select(Vost.all, :id, :response, @why.answer_id), :class => "form-control") %>
      </div>

      <!-- Label and input for body -->
      <div class="form-group">
        <label for="body" class="control-label">
          Body
        </label>

        <textarea id="body" name="body" placeholder="Body" class="form-control" rows="3"><%= @why.body %></textarea>
      </div>

      <!-- Label and input for post_id -->
      <div class="form-group">
        <label for="post_id" class="control-label">
          Post
        </label>

        <%= select_tag(:post_id, options_from_collection_for_select(Post.all, :id, :body, @why.post_id), :class => "form-control") %>
      </div>

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <button class="btn btn-success">
        Create Why
      </button>
      or
      <a href="/whies">Cancel</a>
    </form>
  </div>
</div>
