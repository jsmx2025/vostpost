<div class="page-header">
  <h3>Why #<%= @why.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Answer</dt>
      <dd><%= @why.answer_id %></dd>

      <dt>Body</dt>
      <dd><%= @why.body %></dd>

      <dt>Question</dt>
      <dd><%= @why.question_id %></dd>

      <dt>User</dt>
      <dd><%= @why.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/whies" class="btn btn-primary">
        Back
      </a>
      <a href="/whies/<%= @why.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_why/<%= @why.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
