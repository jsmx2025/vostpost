<div class="page-header">
  <h1>
    Whies
    <a href="/whies/new" class="btn btn-lg btn-success">New Why</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "whies_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :body_cont, "Body contains" %>
    <%= f.text_field :body_cont, :class => "form-control", :placeholder => "Body contains" %>
  </div>

<div class="form-group">
  <%= f.label :question_id, "Question" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :question_id_gteq, :class => "form-control", :placeholder => "Question greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :question_id_lteq, :class => "form-control", :placeholder => "Question less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :user_email_cont, "User email contains" %>
      <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

<div class="form-group">
      <%= f.label :answer_yes_no_eq, "Vost yes_no " %>
      <label class="radio-inline">
        <%= f.radio_button :answer_yes_no_eq, "1", checked: ((params[:q] && params[:q][:answer_yes_no_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :answer_yes_no_eq, "0", checked: ((params[:q] && params[:q][:answer_yes_no_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :answer_yes_no_eq, ""%> Either
      </label>
    </div>

<div class="form-group">
      <%= f.label :post_body_cont, "Post body contains" %>
      <%= f.text_field :post_body_cont, :class => "form-control", :placeholder => "Post body contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/whies" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#whies_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Answer</th>
        <th>Body</th>
        <th>Question</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @whies.each do |why| %>
      <tr>
        <td>
          <% if why.answer.present? %>
            <a href="/vosts/<%= why.answer.id %>">
              <%= why.answer.yes_no %>
            </a>
          <% end %>
        </td>
        <td><%= why.body %></td>
        <td><%= why.question_id %></td>
        <td>
          <% if why.user.present? %>
            <a href="/users/<%= why.user.id %>">
              <%= why.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/whies/<%= why.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == why.user %>
            <a href="/whies/<%= why.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_why/<%= why.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @whies, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
