<div class="page-header">
  <h1>
    Inquiries
    <a href="/inquiries/new" class="btn btn-lg btn-success">New Inquiry</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @inquiries.each do |inquiry| %>
      <tr>
        <td><%= inquiry.user_id %></td>
        <td>
          <a href="/inquiries/<%= inquiry.id %>" class="btn btn-primary">Show</a>
          <a href="/inquiries/<%= inquiry.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_inquiry/<%= inquiry.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
