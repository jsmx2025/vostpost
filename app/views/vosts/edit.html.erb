<!-- Validation failure messages -->
<% if @vost.errors.any? %>
  <% @vost.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Vost #<%= @vost.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_vost/<%= @vost.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for response -->
      <div class="form-group">
        <label for="response" class="control-label">
          Response
        </label>

        <input type="text" id="response" name="response" placeholder="Response" class="form-control" value="<%= @vost.response %>">
      </div>

      <!-- Label and input for question_id -->
      <div class="form-group">
        <label for="question_id" class="control-label">
          Question
        </label>

        <%= select_tag(:question_id, options_from_collection_for_select(Post.all, :id, :body, @vost.question_id), :class => "form-control") %>
      </div>

      
      

      <button class="btn btn-warning">
        Update Vost
      </button>
      or
      <a href="/vosts/<%= @vost.id %>">Cancel</a>
    </form>
  </div>
</div>
