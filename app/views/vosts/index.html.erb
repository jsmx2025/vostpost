<div class="page-header">
  <h1>
    Vosts
    <a href="/vosts/new" class="btn btn-lg btn-success">New Vost</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "vosts_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :response_cont, "Response contains" %>
    <%= f.text_field :response_cont, :class => "form-control", :placeholder => "Response contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :user_email_cont, "User email contains" %>
      <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

<div class="form-group">
      <%= f.label :post_body_cont, "Post body contains" %>
      <%= f.text_field :post_body_cont, :class => "form-control", :placeholder => "Post body contains" %>
    </div>

<div class="form-group">
      <%= f.label :whies_body_cont, "Why body contains" %>
      <%= f.text_field :whies_body_cont, :class => "form-control", :placeholder => "Why body contains" %>
    </div>

<div class="form-group">
      <%= f.label :whyvosts_response_cont, "Whyvost response contains" %>
      <%= f.text_field :whyvosts_response_cont, :class => "form-control", :placeholder => "Whyvost response contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/vosts" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#vosts_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Response</th>
        <th>Question</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @vosts.each do |vost| %>
      <tr>
        <td><%= vost.response %></td>
        <td>
          <% if vost.post.present? %>
            <a href="/posts/<%= vost.post.id %>">
              <%= vost.post.body %>
            </a>
          <% end %>
        </td>
        <td>
          <% if vost.user.present? %>
            <a href="/users/<%= vost.user.id %>">
              <%= vost.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/vosts/<%= vost.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == vost.user %>
            <a href="/vosts/<%= vost.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_vost/<%= vost.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @vosts, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
