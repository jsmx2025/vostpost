<div class="page-header">
  <h3>Vost #<%= @vost.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Yes no</dt>
      <dd><%= @vost.yes_no %></dd>

      <dt>Question</dt>
      <dd><%= @vost.question_id %></dd>

      <dt>User</dt>
      <dd><%= @vost.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/vosts" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @vost.user %>
        <a href="/vosts/<%= @vost.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_vost/<%= @vost.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>

<!-- A Vost has many whies -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Whies
      </li>

      <% @vost.whies.each do |why| %>
        <li class="list-group-item">
          <a href="/whies/<%= why.id %>">
            <%= why.body %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/whies/<%= why.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/whies/<%= why.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_why/<%= why.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_why" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for answer_id -->
      <div class="form-group">
        <label for="answer_id" class="control-label">
          Answer
        </label>

        <%= select_tag(:answer_id, options_from_collection_for_select(Vost.all, :id, :yes_no), :class => "form-control") %>
      </div>

      <!-- Label and input for body -->
      <div class="form-group">
        <label for="body" class="control-label">
          Body
        </label>

        <textarea id="body" name="body" placeholder="Body" class="form-control" rows="3"></textarea>
      </div>

      <!-- Label and input for question_id -->
      <div class="form-group">
        <label for="question_id" class="control-label">
          Question
        </label>

        <input type="text" id="question_id" name="question_id" placeholder="Question" class="form-control" value="">
      </div>

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <button class="btn btn-block btn-success">
        Create Why
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
